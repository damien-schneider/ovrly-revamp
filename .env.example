# ===========================================
# Ovrly Self-Hosted Configuration
# ===========================================
# Copy this file to .env and fill in your values
# DO NOT commit .env to source control!

# ===========================================
# Convex Backend Configuration
# ===========================================

# External URLs (change these to your domain in production)
# For local development, use localhost
CONVEX_CLOUD_ORIGIN=http://localhost:3210
CONVEX_SITE_ORIGIN=http://localhost:3211
NEXT_PUBLIC_DEPLOYMENT_URL=http://localhost:3210

# Instance configuration
INSTANCE_NAME=ovrly
# Generate a random secret: openssl rand -hex 32
INSTANCE_SECRET=

# Database (optional - SQLite is used by default)
# For Postgres: postgresql://user:password@host:5432
# POSTGRES_URL=
# For MySQL: mysql://user:password@host:3306
# MYSQL_URL=
# Set to 1 if your database doesn't support SSL
# DO_NOT_REQUIRE_SSL=1

# S3 Storage (optional - local storage is used by default)
# AWS_REGION=us-east-1
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# S3_STORAGE_EXPORTS_BUCKET=convex-exports
# S3_STORAGE_SNAPSHOT_IMPORTS_BUCKET=convex-imports
# S3_STORAGE_MODULES_BUCKET=convex-modules
# S3_STORAGE_FILES_BUCKET=convex-files
# S3_STORAGE_SEARCH_BUCKET=convex-search

# ===========================================
# Web App Configuration
# ===========================================

# URLs for the frontend (internal Docker network by default)
# Change to external URLs in production
VITE_CONVEX_URL=http://localhost:3210
VITE_CONVEX_SITE_URL=http://localhost:3211

# Web app origin for CORS (where the frontend runs)
# In production, this should be your public web app URL
WEB_APP_ORIGIN=http://localhost:3001

# ===========================================
# Twitch Configuration
# ===========================================

# Get these from https://dev.twitch.tv/console/apps
VITE_TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_ID=your_twitch_client_id
TWITCH_CLIENT_SECRET=your_twitch_client_secret

# ===========================================
# Bot Server Configuration
# ===========================================

# URL for the bot server (internal Docker network)
VITE_BOT_SERVER_URL=http://localhost:3002

# Generate a random secret: openssl rand -hex 32
BOT_API_SECRET=your_bot_api_secret

# ===========================================
# Port Configuration (optional)
# ===========================================

# CONVEX_PORT=3210
# CONVEX_SITE_PORT=3211
# DASHBOARD_PORT=6791
# WEB_PORT=3001
# BOT_PORT=3002

# ===========================================
# Coolify Configuration (optional)
# ===========================================

# COOLIFY_APP_ID=ovrly

{
  "name": "ovrly-revamp",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.27.0",
      "better-auth": "1.3.27",
      "@convex-dev/better-auth": "^0.9.1",
      "typescript": "^5.7.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:server": "turbo -F @ovrly-revamp/backend dev",
    "dev:local": "docker compose up -d && turbo -F web dev",
    "dev:setup": "turbo -F @ovrly-revamp/backend dev:setup",
    "dev:bot": "turbo -F @ovrly-revamp/twitch-bot dev",
    "deploy:local": "turbo -F @ovrly-revamp/backend deploy:local"
  },
  "dependencies": {
    "nitro": "^3.0.1-alpha.0",
    "re-resizable": "^6.11.2"
  },
  "devDependencies": {
    "bun-types": "^1.3.1",
    "turbo": "^2.5.4",
    "@biomejs/biome": "2.3.3",
    "ultracite": "6.2.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.0"
}

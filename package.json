{
  "name": "ovrly-revamp",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "convex": "^1.31.4",
      "better-auth": "1.4.9",
      "@convex-dev/better-auth": "^0.10.10",
      "typescript": "^5.7.2"
    }
  },
  "scripts": {
    "check": "biome check --write .",
    "prepare": "husky",
    "dev": "turbo dev",
    "build": "turbo build",
    "check-types": "turbo check-types",
    "dev:web": "turbo -F web dev",
    "dev:backend": "turbo -F @ovrly-revamp/backend dev",
    "dev:bot": "turbo -F @ovrly-revamp/twitch-bot dev",
    "deploy": "turbo -F @ovrly-revamp/backend deploy"
  },
  "dependencies": {
    "nitro": "^3.0.1-alpha.1",
    "re-resizable": "^6.11.2"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.11",
    "bun-types": "^1.3.6",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "turbo": "^2.7.4",
    "ultracite": "7.0.11"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,jsonc,css,scss,md,mdx}": [
      "bun x ultracite fix"
    ]
  },
  "packageManager": "bun@1.3.0"
}
